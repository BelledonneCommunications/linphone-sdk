###############################################################################
# Dockerfile used to make gitlab.linphone.org:4567/bc/public/linphone-sdk/bc-dev-debian12-java:20260106_add_deps_for_hidapi
###############################################################################

FROM gitlab.linphone.org:4567/bc/public/linphone-sdk/bc-dev-debian12:20260106_add_deps_for_hidapi

MAINTAINER Ghislain MARY <ghislain.mary@belledonne-communications.com>

USER root

# Install Microsoft openJDK 21
## Add Microsoft repositories
RUN apt-get update && \
    apt-get install wget && \
    wget https://packages.microsoft.com/config/debian/$(lsb_release -rs)/packages-microsoft-prod.deb -O packages-microsoft-prod.deb && \
    sudo dpkg -i packages-microsoft-prod.deb && \
    rm packages-microsoft-prod.deb

## Install
RUN apt-get update && apt-get install -y msopenjdk-21

USER bc

ENV JAVA_HOME=/usr/lib/jvm/msopenjdk-21-amd64/